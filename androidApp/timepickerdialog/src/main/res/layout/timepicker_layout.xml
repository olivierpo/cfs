<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:orientation="vertical">

    <include layout="@layout/timepicker_toolbar" />

    <LinearLayout
        android:id="@+id/linear_wheel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/picker_dialog_height"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#90673ab7"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/yearTip"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:textColor="@android:color/white"
                android:text="YEAR"
                android:gravity="center"
                android:textSize="10sp"
                android:padding="2dp"/>
            <TextView
                android:id="@+id/monthTip"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@android:color/white"
                android:text="MONTH"
                android:gravity="center"
                android:textSize="10sp"

                android:padding="2dp"/>
            <TextView
                android:id="@+id/dayTip"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@android:color/white"
                android:text="DAY"
                android:gravity="center"
                android:textSize="10sp"

                android:padding="2dp"/>
            <TextView
                android:id="@+id/hourTip"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="10sp"

                android:textColor="@android:color/white"
                android:text="HOUR"
                android:gravity="center"
                android:padding="2dp"/>
            <TextView
                android:id="@+id/minuteTip"
                android:layout_width="0dp"
                android:textSize="10sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@android:color/white"
                android:text="MINUTE"
                android:gravity="center"
                android:padding="2dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/picker_dialog_height"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <com.envision.timepickerdialog.wheel.WheelView
                android:id="@+id/year"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.3" />


            <com.envision.timepickerdialog.wheel.WheelView
                android:id="@+id/month"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0" />


            <com.envision.timepickerdialog.wheel.WheelView
                android:id="@+id/day"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0" />


            <com.envision.timepickerdialog.wheel.WheelView
                android:id="@+id/hour"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0" />

            <com.envision.timepickerdialog.wheel.WheelView
                android:id="@+id/minute"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>


